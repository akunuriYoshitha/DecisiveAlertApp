<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <NumberPicker
        android:id="@+id/num_calls_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/set_number_picker"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/num_calls_picker"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/num_calls_picker"
        android:text="@string/setNumberPicker" />

    <Button
        android:id="@+id/cancel_number_picker"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/num_calls_picker"
        android:layout_toLeftOf="@+id/set_number_picker"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"

        android:text="@string/cancelNumberpicker" />



</RelativeLayout>